@page "/welcome"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using CineQuizAI.Web.Localization.JsonLocalization

@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@inject IJsonStringLocalizerFactory L

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3">@W["Title"]</h3>
                    <p>@W["Lead"]</p>
                    <button class="btn btn-primary w-100" @onclick="@(() => Nav.NavigateTo("/"))">
                        @W["GoHome"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IJsonStringLocalizer W = default!;

    protected override void OnInitialized()
    {
        W = L.Create("Welcome");
    }
}
