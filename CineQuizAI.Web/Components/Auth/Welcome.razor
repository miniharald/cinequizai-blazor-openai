@page "/welcome"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using CineQuizAI.Web.Localization.JsonLocalization

@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@inject IJsonStringLocalizerFactory L

<div class="auth-container">
    <div class="container py-5">
     <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 auth-card">
 <div class="card">
     <div class="card-body p-4 p-sm-5 text-center">
           <div class="mb-4">
   <div class="display-1 mb-3">🎉</div>
              <h2 class="card-title fw-bold">@W["Title"]</h2>
      <p class="text-secondary">@W["Lead"]</p>
       </div>

  <div class="d-grid gap-3">
        <button class="btn btn-primary btn-lg" @onclick="@(() => Nav.NavigateTo("/"))">
@W["GoHome"]
    </button>
        <a href="/quiz/start" class="btn btn-success btn-lg">
   @W["StartQuiz"]
       </a>
       </div>
        </div>
  </div>
 </div>
        </div>
    </div>
</div>

@code {
    private IJsonStringLocalizer W = default!;

    protected override void OnInitialized()
    {
        W = L.Create("Welcome");
    }
}
