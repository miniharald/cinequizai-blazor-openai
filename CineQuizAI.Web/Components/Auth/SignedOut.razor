@page "/signed-out"
@rendermode InteractiveServer
@using CineQuizAI.Web.Localization.JsonLocalization
@inject NavigationManager Nav
@inject IJsonStringLocalizerFactory L

<div class="auth-container">
    <div class="container py-5">
        <div class="row justify-content-center">
   <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 auth-card">
        <div class="card">
 <div class="card-body p-4 p-sm-5 text-center">
<div class="mb-4">
              <div class="display-1 mb-3">👋</div>
     <h2 class="card-title fw-bold">@S["Title"]</h2>
           <p class="text-secondary">@S["Info"]</p>
     </div>

          <div class="d-grid gap-3">
  <button class="btn btn-primary btn-lg" @onclick="HandleLoginClick">
    @S["LoginAgain"]
    </button>
   <a href="/" class="btn btn-outline-secondary btn-lg">
     @S["BackHome"]
 </a>
         </div>
   </div>
          </div>
</div>
        </div>
    </div>
</div>

@code {
    private IJsonStringLocalizer S = default!;

    protected override void OnInitialized()
    {
        S = L.Create("SignedOut");
    }

 private void HandleLoginClick()
    {
     Nav.NavigateTo("/auth/login");
    }
}
