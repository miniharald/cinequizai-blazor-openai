@using CineQuizAI.Web.Components.Shared
@using CineQuizAI.Web.Localization.JsonLocalization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJsonStringLocalizerFactory L
@inherits LayoutComponentBase

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CineQuiz AI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">@M["Home"]</a>
                    </li>
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <a class="nav-link" href="/quiz/start">@M["StartQuiz"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/quiz/history">@M["MyHistory"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/preferences">@M["Preferences"]</a>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                </ul>
                <ul class="navbar-nav">
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    @M.Format("Hello", context.User.Identity?.Name ?? "")
                                </span>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-light" @onclick="SignOut">@M["SignOut"]</button>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/login">@M["Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/register">@M["Register"]</a>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @Body
    </main>
</div>

@code {
    private IJsonStringLocalizer M = default!;

    protected override void OnInitialized()
    {
        M = L.Create("MainLayout");
    }

    private void SignOut()
    {
        Navigation.NavigateTo("/auth/signout", forceLoad: true);
    }
}
