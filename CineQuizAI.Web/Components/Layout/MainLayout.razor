@using CineQuizAI.Web.Components.Shared
@using CineQuizAI.Web.Localization.JsonLocalization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJsonStringLocalizerFactory L
@inherits LayoutComponentBase

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CineQuiz AI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">@M["Home"]</a>
                    </li>
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <a class="nav-link" href="/quiz/start">@M["StartQuiz"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/quiz/history">@M["MyHistory"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/preferences">@M["Preferences"]</a>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                </ul>
                <ul class="navbar-nav">
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    @M.Format("Hello", context.User.Identity?.Name ?? "")
                                </span>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-light" @onclick="SignOut">@M["SignOut"]</button>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/login">@M["Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/register">@M["Register"]</a>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                    @* Language Switcher *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            🌐 @_currentLanguage
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#" @onclick='() => ChangeLanguage("sv")' @onclick:preventDefault>🇸🇪 Svenska</a></li>
                            <li><a class="dropdown-item" href="#" @onclick='() => ChangeLanguage("en")' @onclick:preventDefault>🇬🇧 English</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @Body
    </main>
</div>

@code {
    private IJsonStringLocalizer M = default!;
    private string _currentLanguage = "sv";

    protected override void OnInitialized()
    {
        M = L.Create("MainLayout");
        
        // Get current language from cookie or default to Swedish
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
      var culture = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
        _currentLanguage = culture == "en" ? "EN" : "SV";
    }

    private void ChangeLanguage(string culture)
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
   var redirectUri = Uri.EscapeDataString(uri.PathAndQuery);
        Navigation.NavigateTo($"/culture/set/{culture}?redirectUri={redirectUri}", forceLoad: true);
    }

    private void SignOut()
    {
        Navigation.NavigateTo("/auth/signout", forceLoad: true);
    }
}
